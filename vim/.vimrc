set number
syntax on
" color desert is also cool
colo slate
filetype plugin indent on

" use spaces instead of tabs
set expandtab
" be smart when using tabs
set smarttab

" 1 tab is 4 spaces
set tabstop=4
" or set softtabstop=2
set shiftwidth=4
" or set shiftwidth=2

" Linebreak on 500 characters
set lbr
set tw=500

" before pasting in vim do
" :set paste
" and after pasting
" :set nopaste

